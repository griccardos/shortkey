{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "shortkey",
    "version": "0.0.1"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "globalShortcut": {
        "all": true
      }
      
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "shortkey",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": false,
        "center": true,
        "decorations": false,
        "title": "shortkey",
        "width": 1920,
        "height": 1080,
        "x": 0,
        "y": 0,
        "transparent": true,
        "visible": false,
        "maximized": true,
        "alwaysOnTop": true
      }
    ]
  }
}
